on post-fs-data

    mkdir /data/vendor/blfp 0700 system  system

on boot
    chmod 0666 /dev/blfp
    chown system system /dev/blfp

    chmod 0660 /dev/trusty-ipc-dev0
    chown system system /dev/trusty-ipc-dev0

service btlfpserver /vendor/bin/hw/btlfpserver
    class late_start
    user system

